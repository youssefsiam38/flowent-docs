{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Flowent API Gateway",
  "description": "Documentation for the Flowent API Gateway",
  "colors": {
    "primary": "#4DCFE0",
    "light": "#8DE5F0",
    "dark": "#2BA8C5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "icon": "rocket",
        "expanded": true,
        "pages": [
          "index",
          "quickstart",
          "development"
        ]
      },
      {
        "group": "Guides",
        "icon": "book-open",
        "pages": [
          "api-concepts",
          "flows_reference"
        ]
      },
      {
        "group": "API Reference",
        "icon": "square-terminal",
        "pages": [
          "api-reference/introduction"
        ],
        "openapi": "api-reference/openapi.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Flowent",
        "href": "https://flowent.chat",
        "icon": "arrow-up-right"
      }
    ]
  },
  "api": {
    "openapi": "api-reference/openapi.json",
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "prefill": true
    }
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "seo": {
    "indexing": "navigable"
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "links": [
      {
        "header": "Product",
        "items": [
          {
            "label": "Flowent Website",
            "href": "https://flowent.chat"
          },
          {
            "label": "Pricing",
            "href": "https://flowent.chat/pricing"
          }
        ]
      },
      {
        "header": "Support",
        "items": [
          {
            "label": "Contact Support",
            "href": "https://flowent.chat/contact"
          },
          {
            "label": "API Gateway Docs",
            "href": "https://docs.flowent.chat"
          }
        ]
      }
    ]
  }
}
